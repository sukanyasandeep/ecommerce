<div class="row" style="width:17%;float:left;border:0px solid red;min-height: 400px !important;max-height: 400px !important;margin-right:15px;margin-top:20px !important;">
 <div class="column middle" style="width:100%;height:100%;border:0px solid green">   
      <div class="w3-container" style="width:100%;height:100%;border:0px solid blue">
          <div class="w3-card-4" style="width:100%;height:100%;border:0px solid black;min-height: 400px !important;max-height: 400px !important;">
             <%= image_tag product.image, style: "width: 250px; display: block" if product.image.attached? %>              
              <div class="w3-container w3-center">
                <p><%=product.name %></p>
                <p>Rs <%= product.price %></p>
                <p><%= link_to 'View Product', product_path(product) %></p>
              </div>
          </div>
      </div>
  </div>    
</div>



    
    

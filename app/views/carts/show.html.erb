<h1>Your Shopping Cart!</h1>
<% unless @cart_products_with_qty.blank? %>
<table>
  <thead>
    <th> Name </th>
    <th> Price </th>
    <th> Quantity </th>
    <th> Subtotal </th>
  </thead>
  <tbody>
  
   <% @cart_products_with_qty.each do |array| %>
      <%product = array[0] %>
      <%qty = array[1] %>
      <tr>
        <td><%=product.name%></td>
        <td><%=product.price%></td>
        <td><%=qty%></td>
        <td><%=product.price * qty.to_i%></td>
        <td>
          <%= link_to '+', add_to_cart_path(product) %>
          <%= link_to '-', remove_one_cart_path(product) %>
          <%= link_to 'Remove', remove_from_cart_path(product) %>
        </td>
       </tr>
     <% end %>
    <tr>
      <td colspan="3">Total</td>
      <td colspan="3"><%=@cart_total%></td>
    </tr>
    <tr>
      <td style="margin-left:60px;"><%= link_to "Place Order", order_create_path, method: :post, class: "button" %></td>
    </tr>


  </tbody>
</table>
<%else%>
     No Cart Items!
  <%end%>